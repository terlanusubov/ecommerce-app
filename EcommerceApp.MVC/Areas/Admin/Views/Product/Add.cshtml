@model ProductAddVm
<div id="basic" class="col-lg-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Add Product</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">

            <div class="row">
                <div class="col-lg-6 col-12 mx-auto">
                    <form action="@Url.Action("Add","Product")" method="post" enctype="multipart/form-data">
                        @Html.ValidationSummary(true)

                        @*Status*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.StatusId)
                            <label for="status">Status</label>
                            <select id="status" required name="Product.StatusId" class="form-control  basic">
                                @{
                                    var selectedValue = Model?.Product?.StatusId;
                                }

                                @if (selectedValue == 0)
                                {
                                    <option selected="selected">--</option>
                                }

                                @for (var i = 10; i <= 30; i += 10)
                                {
                                    if (selectedValue != 0 && i == selectedValue)
                                    {
                                        <option selected value="@i">@Model.Statuses[i / 10 - 1]</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@Model.Statuses[i / 10 - 1]</option>
                                    }
                                }

                            </select>

                        </div>

                        @*Main Image*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.MainImage)
                            <label for="mainImage">Main image</label>
                            <input id="mainImage" name="Product.MainImage" class="form-control basic" type="file" />
                        </div>

                        @*Images*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.Images)
                            <label for="image">Images</label>
                            <input id="image" class="form-control basic" name="Product.Images" type="file" multiple />
                        </div>




                        @*Name*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.Name)
                            <label for="name">Name</label>
                            <input value="@Model?.Product?.Name" id="name" type="text" name="Product.Name" placeholder="Product name..." class="form-control" required>
                        </div>
                        @*Category*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.CategoryId)
                            <label for="category">Category</label>
                            <select required name="Product.CategoryId" id="category" class="form-control  basic">
                                @{
                                    selectedValue = Model?.Product?.CategoryId;
                                }

                                @if (selectedValue == 0)
                                {
                                    <option selected="selected">--</option>
                                }


                                @foreach (var category in Model.Categories)
                                {
                                    if (selectedValue != 0 && category.CategoryId == selectedValue)
                                    {
                                        <option selected value="@category.CategoryId">@category.Name</option>

                                    }
                                    else
                                    {
                                        <option value="@category.CategoryId">@category.Name</option>

                                    }

                                }
                            </select>

                        </div>

                        @*Brand*@

                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.BrandId)
                            <label for="brand">Brand</label>
                            <select id="brand" required name="Product.BrandId" class="form-control  basic">

                                @{
                                    selectedValue = Model?.Product?.BrandId;
                                }

                                @if (selectedValue == 0)
                                {
                                    <option selected="selected">--</option>
                                }

                                @foreach (var brand in Model.Brands)
                                {
                                    if (selectedValue != 0 && brand.BrandId == selectedValue)
                                    {
                                        <option selected value="@brand.BrandId">@brand.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@brand.BrandId">@brand.Name</option>
                                    }
                                }
                            </select>

                        </div>

                        @*Color*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.ColorId)
                            <label for="color">Color</label>

                            <select id="color" required name="Product.ColorId" class="form-control  basic">

                                @{
                                    selectedValue = Model?.Product?.ColorId;
                                }

                                @if (selectedValue == 0)
                                {
                                    <option selected="selected">--</option>
                                }


                                @foreach (var color in Model.Colors)
                                {
                                    if (selectedValue != 0 && color.ColorId == selectedValue)
                                    {
                                        <option selected value="@color.ColorId">@color.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@color.ColorId">@color.Name</option>

                                    }
                                }
                            </select>

                        </div>

                        @*Size*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.SizeId)
                            <label for="size">Size</label>

                            <select id="size" required name="Product.SizeId" class="form-control  basic">
                                @{
                                    selectedValue = Model?.Product?.ColorId;
                                }

                                @if (selectedValue == 0)
                                {
                                    <option selected="selected">--</option>
                                }

                                @foreach (var size in Model.Sizes)
                                {
                                    if (selectedValue != 0 && size.SizeId == selectedValue)
                                    {
                                        <option selected value="@size.SizeId">@size.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@size.SizeId">@size.Name</option>
                                    }

                                }
                            </select>

                        </div>

                        @*Price*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.Price)
                            <label for="price">Price</label>
                            <input value="@Model?.Product?.Price" id="price" type="number" name="Product.Price" placeholder="Product price..." class="form-control" required>
                        </div>

                        @*Discount*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.Discount)
                            <label for="discount">Discount</label>
                            <input value="@Model?.Product?.Discount" id="discount" type="number" name="Product.Discount" placeholder="Product discount..." class="form-control" required>
                        </div>


                        @*Short desc*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.ShortDesc)
                            <label for="shortdesc">Short description</label>
                            <textarea value="@Model?.Product?.ShortDesc" id="shortdesc" name="Product.ShortDesc" class="form-control"></textarea>
                        </div>


                        @*Stock count*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.StockCount)
                            <label for="stockcount">Stock count</label>
                            <input value="@Model?.Product?.StockCount" id="stockcount" type="number" name="Product.StockCount" placeholder="Product stock count..." class="form-control" required>
                        </div>


                        @*Description*@
                        <div class="form-group">
                            @Html.ValidationMessageFor(c => c.Product.Description)
                            <label for="desc">Description</label>
                            <textarea value="@Model?.Product?.Description" id="desc" name="Product.Description" class="form-control"></textarea>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">ADD PRODUCT</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Styles
{

    <link rel="stylesheet" type="text/css" href="~/admin/plugins/select2/select2.min.css">
}

@section Scripts
{

    <script src="~/admin/plugins/select2/select2.min.js"></script>
}