@model List<ProductListDto>
<div id="tableFooter" class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>Products</h4>
                    <a href="@Url.Action("Add","Product")" class="btn btn-outline-primary mb-2">Add Product</a>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-condensed mb-4">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Discount</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.ProductId</td>
                                <td>
                                    <img style="width:100px;height:100px;" src="@product.Image" />
                                </td>
                                <td>@product.Name</td>
                                <td>@product.CategoryName</td>
                                <td>@product.Price.ToString("#.##")</td>
                                <td>@product.Discount %</td>
                                <td>@product.Created</td>
                                <td>
                                    @if (product.ProductStatusId == (int)ProductStatus.Active)
                                    {
                                        <span class="badge badge-success"> Active </span>
                                    }
                                    else if (product.ProductStatusId == (int)ProductStatus.Home)
                                    {
                                        <span class="badge badge-secondary"> Home </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger"> Deactive </span>
                                    }
                                </td>

                                <td class="text-center">
                                    <ul class="table-controls">
                                        <li><a href="@Url.Action("Edit","Product", new{productId = product.ProductId})" data-toggle="tooltip" data-placement="top" title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle text-primary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg></a></li>
                                    </ul>
                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            @await Component.InvokeAsync("Pagination", ViewBag.Pagination)
        </div>


    </div>


</div>



@section Styles
{
    <link href="~/admin/assets/css/elements/custom-pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/forms/theme-checkbox-radio.css">
    <link href="~/admin/assets/css/tables/table-basic.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/plugins/animate/animate.css" rel="stylesheet" type="text/css" />
    <script src="~/admin/plugins/sweetalerts/promise-polyfill.js"></script>
    <link href="~/admin/plugins/sweetalerts/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/plugins/sweetalerts/sweetalert.css" rel="stylesheet" type="text/css" />
    <link href="~/admin/assets/css/components/custom-sweetalert.css" rel="stylesheet" type="text/css" />


}


